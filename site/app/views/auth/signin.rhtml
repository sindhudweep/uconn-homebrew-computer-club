<html>
  <head>
    <title>Signin for Access</title>
  </head>
  <body>
    <% form_tag( :action => "signin") do %>
       <label for="email_address" >Email Address:</label>
       <%= text_field_tag "email_address" %><br />
       <label for="password" >Password:</label>
       <%= password_field_tag "password" %><br />
       <%= submit_tag "Sign in" %>
    <% end %>
  </body>
</html>

